<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel</title>
  <style media="screen">
    *, *:before, *:after { padding: 0; margin: 0; box-sizing: border-box; }
    body { background-color: #080710; font-family: 'Poppins', sans-serif; color: #ffffff; }
    .background { width: 100%; height: 100vh; position: fixed; top: 0; left: 0; overflow: hidden; z-index: -1; }
    .background .shape { height: 200px; width: 200px; position: absolute; border-radius: 50%; }
    .shape:nth-child(1) { background: linear-gradient(#1845ad, #23a2f6); left: -80px; top: -80px; }
    .shape:nth-child(2) { background: linear-gradient(to right, #ff512f, #f09819); right: -30px; bottom: -80px; }
    .shape:nth-child(3) { background: linear-gradient(to left, #6a11cb, #2575fc); left: 10%; bottom: 10%; }
    .shape:nth-child(4) { background: linear-gradient(to top right, #30cfd0, #330867); right: 20%; top: 30%; }
    .shape:nth-child(5) { background: linear-gradient(to top left, #f12711, #f5af19); left: 70%; bottom: 40%; }
    .navbar { display: flex; justify-content: center; align-items: center; height: 80px; background-color: #1e1e1e; color: #ffffff; width: 100%; box-shadow: 0 0 10px rgba(0, 0, 0, 0.5); }
    .navbar h1 { font-size: 24px; }
    .container { display: flex; flex-direction: column; align-items: center; margin-top: 40px; }
    .button-container { display: flex; justify-content: flex-end; width: 90%; margin-bottom: 20px; }
    .button { text-decoration: none; background-color: #ffffff; color: #000000; padding: 10px 20px; font-size: 16px; font-weight: 600; border-radius: 5px; cursor: pointer; border: none; transition: background-color 0.3s ease; margin-left: 10px; }
    .button:hover { background-color: #f8f4f4; color: #000000; }
    .student-table-container { width: 90%; margin: 20px auto; border-radius: 10px; backdrop-filter: blur(10px); background-color: rgba(255,255,255,0.13); border: 2px solid rgba(255,255,255,0.1); box-shadow: 0 0 40px rgba(8,7,16,0.6); overflow: hidden; }
    .student-table { width: 100%; border-collapse: separate; border-spacing: 0; background-color: rgba(255,255,255,0.1); text-align: left; }
    .student-table th, .student-table td { padding: 15px; border: 1px solid rgba(255,255,255,0.2); margin: 3px; }
    .student-table th { background-color: rgba(0,0,0,0.5); font-weight: 600; }
    .student-table tr:nth-child(even) { background-color: rgba(255,255,255,0.05); }
    .student-table .profile-pic { width: 50px; height: 50px; border-radius: 50%; }
    .student-table .download-button { background-color: #ffffff; color: #000000; padding: 5px 10px; font-size: 14px; font-weight: 600; border-radius: 5px; cursor: pointer; text-decoration: none; transition: background-color 0.3s ease; }
    .student-table .download-button:hover { background-color: #000000; color: #ffffff; }
    .popup-overlay { display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); justify-content: center; align-items: center; z-index: 1000; }
    .popup { background-color: #ffffff; padding: 20px; border-radius: 10px; text-align: center; color: #000000; }
    .popup input[type="text"], .popup input[type="file"] { width: 80%; padding: 10px; margin: 10px 0; border-radius: 5px; border: 1px solid #ccc; }
    .popup .popup-button { background-color: #000000; color: #ffffff; padding: 10px 20px; font-size: 16px; font-weight: 600; border-radius: 5px; cursor: pointer; border: none; transition: background-color 0.3s ease; margin: 5px; }
    .popup .popup-button:hover { background-color: #ffffff; color: #000000; }
  </style>
  <script>
    function showPopup() {
      document.getElementById('popup-overlay').style.display = 'flex';
    }

    function closePopup() {
      document.getElementById('popup-overlay').style.display = 'none';
    }

    function logout() {
      fetch('/logout')
        .then(response => {
          if (response.ok) {
            window.location.href = '/';
          } else {
            alert('Logout failed');
          }
        })
        .catch(error => {
          console.error('Error during logout:', error);
        });
    }

    function submitStudent() {
      // Implement form submission logic here
      alert('Student submitted');
      closePopup();
    }
  </script>
</head>
<body>
  <div class="background">
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
  </div>
  <div class="navbar">
    <h1>Admin Panel</h1>
  </div>
  <div class="container">
    <div class="button-container">
      <button class="button" onclick="showPopup()">Create Student</button>
      <a href="#" onclick="logout()" class="button">Logout</a>
    </div>
    <div class="student-table-container">
      <table class="student-table">
